<!-- List of All Stores -->
<% if @stores == [] %>
  <p>There are currently no stores saved</p>
<% else %>
  <h1>Your Stores</h1>
  <ul>
    <% @stores.each do |store| %>
      <li><a href="stores/<%= store.id %>"><%= store.storename %></a></li>
    <% end %>
  </ul>
<% end %>

<hr>

<h1>Add a Store</h1>
<form action="stores" method="post">
  <label for="storename">Store Name:</label>
  <input type="text" name="storename">

  <button class="btn btn-default" type="submit">Add Store</button>
</form>
